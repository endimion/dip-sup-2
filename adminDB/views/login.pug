extends layout

block content
  .main.container
    .row
      .col.l12.m12.col-md-offset-3
        h3.display-4.m-b-2= title
    .row
      .col.l12.md12.col-md-offset-3
        div.col-m-12=message
    .row
      form(method='POST' action='login')
        div.form-group
          label(for='username') Username:
          input#username.form-control(type='text', placeholder='first and last' name='username')
        div.form-group
          label(for='password') Password:
          input#password.form-control(type='text', name='password' )
        button.btn.btn-primary(type='submit') Login
